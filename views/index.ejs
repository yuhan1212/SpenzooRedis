<!DOCTYPE html>
<html>
  <head>
    <title>Spenzoo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h1>Spenzoo</h1>

      <section>
        <h2>Create Expense</h2>
        <form action="/expense/create" method="POST">
          <div>
            
            <label class="form-label">
              User: <input type="text" class="form-control" name="userId">
            </label>
            
            <label class="form-label">
              Amount: <input type="text" class="form-control" name="amount">
            </label>
            
            <label class="form-label">
              Category: <input type="text" class="form-control" name="category">
            </label>

            <button class="btn btn-primary">Create</button>
          </div>

        </form>
      </section>

      <section>
        <h2>Expenses</h2>
        <!-- this template needs a tweets variable -->
        <% expenses.forEach(function(expense){ %>


          <%- include("expense/show", {expense: expense}); %>
        <% }); %>
      </section>
    

  </body>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</html>
